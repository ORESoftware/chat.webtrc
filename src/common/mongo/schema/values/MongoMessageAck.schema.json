        },
        "ChatId": {
          "$ref": "#/$defs/ObjectID"
        },
        "UserId": {
          "$ref": "#/$defs/ObjectID"
        },
        "IsRead": {
          "type": "boolean"
        },
        "IsSaved": {
          "type": "boolean"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "_id",
        "MessageId",
        "ChatId",
        "UserId",
        "IsRead",
        "IsSaved"
      ]
    },
    "ObjectID": {
      "items": {
        "type": "integer"
